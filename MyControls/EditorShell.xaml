<UserControl x:Name="ThisControl" x:Class="RootNS.MyControls.EditorShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:hc="https://handyorg.github.io/handycontrol"
    mc:Ignorable="d" UseLayoutRounding="True"
    d:DesignHeight="450" d:DesignWidth="800">
    <hc:TabControl x:Name="ThisTabControl"
        IsAnimationEnabled="True" ShowCloseButton="True" IsTabFillEnabled="False" Style="{StaticResource TabControlPlusBaseStyle}"
        Loaded="EditorTabControl_Loaded" DataContext="{Binding OpeningDocList, Source={StaticResource Gval}}"/>
</UserControl>